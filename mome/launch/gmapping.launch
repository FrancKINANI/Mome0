<launch>
    <!-- Set use_sim_time to true -->
    <param name="use_sim_time" value="true"/>

    <arg name="3d_sensor" default="r200"/>
	<arg name="custom_gmapping_launch_file" default="$(find navigation_stack)/launch/includes/gmapping/$(arg 3d_sensor)_gmapping.launch.xml"/>

	<include file="$(arg custom_gmapping_launch_file)"/>

    <!-- Include the robot launch file -->
    <include file="$(find mome)/launch/mome_gazebo.launch" />

    <!-- World File -->
	<arg name="world_file" default="$(find mome)/worlds/terrain_v3.world"/>

	<!-- Launch Gazebo World -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="use_sim_time" value="true"/>
		<arg name="verbose" value="false"/>
		<arg name="debug" value="false"/>
		<arg name="gui" value="true" />
		<arg name="world_name" value="$(arg world_file)"/>
	</include>

	<node name="rviz" pkg="rviz" type="rviz" respawn="false"
		args="-d $(find navigation_stack)/rviz/gmapping.rviz"/>
</launch>